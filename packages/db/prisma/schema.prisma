
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id                  String      @id @default(uuid())
  email               String      @unique
  password            String
  name                String
  photo               String?
  isLifetimeSubscriber Boolean     @default(false)
  rooms               Room[]
  chats               Chat[]
  roomMessages        RoomMessage[]
  payments            Payment[]
}

model Payment {
  id        Int      @id @default(autoincrement())
  txnId     String   @unique
  amount    Float
  status    String   // PENDING, SUCCESS, FAILURE
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Room {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  createdAt DateTime @default(now())
  adminId   String
  admin     User     @relation(fields: [adminId], references: [id])
  chats     Chat[]
  roomMessages RoomMessage[]
}


model Chat {
  id        Int      @id @default(autoincrement())
  roomId    Int
  message   String
  userId    String
  room      Room     @relation(fields: [roomId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model RoomMessage {
    id        Int      @id @default(autoincrement())
    roomId    Int
    message   String
    userId    String
    createdAt DateTime @default(now())
    room      Room     @relation(fields: [roomId], references: [id])
    user      User     @relation(fields: [userId], references: [id])
}